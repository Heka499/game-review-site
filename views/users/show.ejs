<h1>User Data for <%= user.username %></h1>
<table class="user-table">
    <thead>
        <tr>
            <th>Username</th>
            <th>Email</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>
                <%= user.username %>
            </td>
            <td>
                <%= user.email %>
            </td>
        </tr>
    </tbody>
</table>

<div>
    <a href="/users">Back</a>
</div>
<div>
    <a href="/users/<%= user.id %>/edit">Edit</a>
</div>
<div>
    <a href="/users/<%= user.id %>?_method=DELETE" onclick="return confirm('Are you sure you want to delete this user?');">Delete</a>
</div>