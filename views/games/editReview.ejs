<h2>Edit Review for <%= review.title %> in <%= game.title %></h2>
<div class="review-form">
    <form action="/games/<%= game._id %>/reviews/<%= review._id %>/update?_method=PUT" method="POST">
        <h2>Edit Review</h2>
        <label for="title">Title</label>
        <input type="text" name="title" id="title" value="<%= review.title %>" required>
        <label for="review">Review</label>
        <input type="text" name="review" id="review" value="<%= review.review %>" required>
        <label for="rating">Rating</label>
        <input type="number" name="rating" id="rating" value="<%= review.rating %>" required>
        <input type="hidden" name="gameId" value="<%= game._id %>">
        <button type="submit">Update Review</button>
    </form>
</div>
